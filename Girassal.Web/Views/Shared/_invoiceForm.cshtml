@model Girassol.Models.Invoice


<div class="col-12">
    <div class="card">

        <div class="card-content">
            <div class="card-body">

                <!-- button trigger for  Vertically Centered modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#exampleModalCenter">
                    Criar Fatura
                </button>
                <!-- Vertically Centered modal Modal -->
                <div class="modal fade  w-1000" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="myModalLabel16" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                         role="document">


                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">
                                    Novo Recebo
                                </h5>
                                <button type="button" class="close" data-bs-dismiss="modal"
                                        aria-label="Close">
                                    <i data-feather="x"></i>
                                </button>
                            </div>


                            <div class="modal-body">
                                <form class="form form-vertical" method="post" asp-action= "create" asp-controller ="invoice">
                                    <div class="form-body">

                                        @Html.Partial("_separatorWithStringParamiters",  "Dados do Cliente")

                                        <div id="clientDiv">


                                            <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="descr" asp-for="@Model.Client.Name">   </label>
                                                    <div class="position-relative">
                                                        <input type="text" class="form-control" placeholder="Nome" asp-for="@Model.Client.Name">
                                                        <div class="form-control-icon">
                                                            <i class="bi bi-file-earmark-person"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="descr" asp-for="@Model.Client.Nuit">   </label>
                                                    <div class="position-relative">
                                                        <input type="text" class="form-control" placeholder="NUIT" asp-for="@Model.Client.Nuit">
                                                        <div class="form-control-icon">
                                                            <i class="bi bi-card-heading"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                              <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="descr" asp-for="@Model.Client.Cell">   </label>
                                                    <div class="position-relative">
                                                        <input type="number" class="form-control" placeholder="Cell" asp-for="@Model.Client.Cell">
                                                        <div class="form-control-icon">
                                                            <i class="bi bi-telephone"></i> 
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>

                                        <div class="mt-4">
                                            @Html.Partial("_separatorWithStringParamiters",  "Dados da Fatura")
                                        </div>


                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="first-name-icon" asp-for="@Model.EntryDate">   </label>
                                                    <div class="position-relative">
                                                        <input type="date" class="form-control" id="first-name-icon" asp-for="@Model.EntryDate" asp-format="{0:yyyy-MM-dd}">
                                                        <div class="form-control-icon">
                                                            <i class="bi bi-calendar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                         


                                            <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="qtt" asp-for="@Model.Price">   </label>
                                                    <div class="position-relative">
                                                        <input type="number" asp-for="@Model.Price" class="form-control" placeholder="Preço" id="qtt">
                                                        <div class="form-control-icon">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash-coin" viewBox="0 0 16 16">
                                                                <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z" />
                                                                <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z" />
                                                                <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z" />
                                                                <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z" />
                                                            </svg>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-group has-icon-left">
                                                    <label for="Tiket" asp-for="@Model.Tiket">   </label>
                                                    <div class="position-relative">
                                                        <input type="number" asp-for="@Model.Tiket" class="form-control" placeholder="tiket..." id="Tiket">
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-12 d-flex justify-content-end">
                                                <button type="submit" class="btn btn-primary me-1 mb-1">Emitir e Gravar</button>
                                                <button type="reset" data-bs-dismiss="modal" class="btn btn-light-danger me-1 mb-1">
                                                    Cancelar
                                                </button>
                                            </div>
                                        </div>



                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



