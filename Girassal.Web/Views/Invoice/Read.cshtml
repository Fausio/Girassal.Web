<script type="text/javascript">


    $(function () {
        setTimeout(function () { $("#hideDiv").fadeOut(1500); }, 1000)

    })

    $(function () {
        $("#table1 .status").click(function () {
            var customerId = $(this).closest("tr").find("td").eq(0).html();
            $.ajax({
                type: "GET",
                url: "/Invoice/status",
                data: { "id": customerId },
                success: function (response) {
                    $("#partialModalStatus").find(".modal-body").html(response);
                    $("#partialModalStatus").modal('show');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });


    $(function () {
        $("#table1 .edit").click(function () {
            var customerId = $(this).closest("tr").find("td").eq(0).html();
            $.ajax({
                type: "GET",
                url: "/Invoice/Edit",
                data: { "id": customerId },
                success: function (response) {
                    $("#partialModal").find(".modal-body").html(response);
                    $("#partialModal").modal('show');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });


    $(function () {
        $("#table1 .Delete").click(function () {
            var customerId = $(this).closest("tr").find("td").eq(0).html();
            $.ajax({
                type: "GET",
                url: "/Invoice/Delete",
                data: { "id": customerId },
                success: function (response) {
                    $("#partialModalDelete").find(".modal-body").html(response);
                    $("#partialModalDelete").modal('show');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });
</script>

