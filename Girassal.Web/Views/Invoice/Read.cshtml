@model Girassol.Models.DTO.ViewModels.InvoiceTableViewModel


@Html.Partial("_pageTitle", "Lista das Faturas")



@if (Model.MessageStatus == 1)
{
    <div id="hideDiv" class="alert alert-success"><i class="bi bi-check-circle"></i> Operação realizada com sucesso ! </div>
}



<div class="card">
    <div class="card-header">
        Lista dos Faturas
    </div>
    <div class="card-body">
        <table class="table table-striped grid" id="table1" ellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome do Cliente</th>
                    <th>Nuite</th>
                    <th>Data de Entrega</th>
                    <th>Descrição</th>
                    <th>Quantidade de roupa</th>
                    <th>Preço</th>
                    <th>Estado</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>

                @foreach (Invoice item in Model.Invoices)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td><b>@item.Client.Name</b> </td>
                        <td>@item.Client.Nuit</td>
                        <td>@item.EntryDate</td>
                        <td>@item.Description</td>
                        <td>@item.Clothings.Quantity</td>
                        <td><b> @item.Price.ToString()  MZN </b> </td>
                        <td>

                            @if (item.Status == 0)
                            {
                                <span class="badge bg-warning">Processamento</span>
                            }
                            else if (item.Status == 1)
                            {
                                <span class="badge bg-success">Finalizada</span>
                            }

                        </td>

                        <td>

                            <a class="btn btn-success status" style="color:white">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-check" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                </svg>
                            </a>

                            <a class="btn btn-warning edit" style="color:white">
                                <svg class="svg-inline--fa fa-edit fa-w-18 fa-fw select-all" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="edit" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" data-fa-i2svg=""><path fill="currentColor" d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z"></path></svg>
                            </a>


                            <a class="btn  btn-danger Delete" style="color:white">
                                <svg class="svg-inline--fa fa-trash-alt fa-w-14 fa-fw select-all" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="trash-alt" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"></path></svg>
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>










<div id="partialModalStatus" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title" style="color:white">Estado da Fatura</h5>

            </div>
            <div class="modal-body">
            </div>

        </div>
    </div>
</div>

<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">Editar</h5>

            </div>
            <div class="modal-body">
            </div>

        </div>
    </div>
</div>


<div id="partialModalDelete" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" style="color:white">Apagar</h5>

            </div>
            <div class="modal-body">
            </div>

        </div>
    </div>
</div>
 


